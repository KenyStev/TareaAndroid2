<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="labprogra2.zerustudio.com.tareaandroid2.ActualizarNotaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota Final: "
        android:id="@+id/lblNota"
        android:layout_below="@+id/txtName"/>
    <EditText
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:id="@+id/txtNota"
        android:text=""
        android:layout_toRightOf="@+id/lblNota"
        android:numeric="decimal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNota"
        android:id="@+id/btnUpdate"
        android:onClick="update"
        android:text="Actualizar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNota"
        android:layout_toRightOf="@+id/btnUpdate"
        android:id="@+id/btnCancel"
        android:onClick="cancel"
        android:text="Cancelar"/>

</RelativeLayout>