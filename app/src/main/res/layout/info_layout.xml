<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Cuenta: "
        android:id="@+id/lblNCuenta"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Cuenta:"
        android:id="@+id/txtNCuenta"
        android:layout_toRightOf="@+id/lblNCuenta"
        android:textSize="35px"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:id="@+id/lblNname"
        android:layout_below="@+id/txtNCuenta"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Cuenta:"
        android:id="@+id/txtName"
        android:layout_toRightOf="@+id/lblNname"
        android:layout_below="@+id/txtNCuenta"
        android:textSize="35px"/>/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota Final: "
        android:id="@+id/lblNota"
        android:layout_below="@+id/txtName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No. Cuenta:"
        android:id="@+id/txtNotaInfo"
        android:layout_toRightOf="@+id/lblNota"
        android:layout_below="@id/txtName"
        android:textSize="35px"/>

</RelativeLayout>